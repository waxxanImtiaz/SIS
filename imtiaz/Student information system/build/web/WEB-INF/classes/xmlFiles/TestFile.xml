<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"><hibernate-mapping>

<hibernate-mapping>
    <class  catalog="Casdf" name="beans.StudentPersonalInfo" optimistic-lock="version" table="adfasd">
         <id name="rollNum" type="string">
            <column name="rollNum"/>
            <generator class="assigned"/>
        </id>
        <property name="name" type="string">
              <column length="30" name="name"/>
        </property>
        
         <property name="gender" type="string">
              <column length="10" name="gender"/>
        </property>
        <property name="fatherName" type="string">
              <column length="30" name="fatherName"/>
        </property>
        <property name="caste" type="string">
              <column length="15" name="caste"/>
        </property>
        <property name="cnic" type="string">
              <column length="15" name="cnic"/>
        </property>
        <property name="stContactNum" type="string">
              <column length="38" name="stPhoneNum"/>
        </property>
        <property name="ftContactNum" type="string">
              <column length="38" name="ftPhoneNum"/>
        </property>
       
        <property name="stEmail" type="string">
              <column length="40" name="stEmail"/>
        </property>
       
        <property name="password" type="string">
              <column length="30" name="password"/>
        </property>
        
        <property name="tempAdd" type="string">
              <column length="60" name="tempAdd"/>
        </property>
        
        <property name="permAdd" type="string">
              <column length="60" name="permAdd"/>
        </property>
        
    </class>
    
</hibernate-mapping>